[main]

# Use color output mode (default is to use simple substring match).
color_output = True

# Use fuzzy matching mode for resources (default is to use simple substring match).
fuzzy_match = True

# Use shortcut matching mode
shortcut_match = False

# log_file location.
log_file = ~/.iawscli.log

# Default log level. Possible values: "CRITICAL", "ERROR", "WARNING", "INFO"
# and "DEBUG".
log_level = INFO

# AWS resources to refresh
refresh_instance_ids = True
refresh_instance_tags = True
refresh_bucket_names = True

[shortcuts]

'ec2 ls' = 'ec2 describe-instances'
'dynamodb ls' = 'dynamodb list-tables'
'emr ls' = 'emr list-clusters'
'elb ls' = 'elb describe-load-balancers'
'--ec2-tags' = '--filters "Name=tag-key,Values=%s"'
'--ec2-state' = '--filters "Name=instance-state-name,Values=%s"'
'--ec2-running' = '--filters "Name=instance-state-name, Values=running"'
'--ec2-pending' = '--filters "Name=instance-state-name, Values=pending"'
'--ec2-stopping' = '--filters "Name=instance-state-name, Values=stopping"'
'--ec2-shutting-down' = '--filters "Name=instance-state-name, Values=shutting-down"'
'--ec2-stopped' = '--filters "Name=instance-state-name, Values=stopped"'
'--ec2-terminated' = '--filters "Name=instance-state-name, Values=terminated"'
'ec2 up' = 'ec2 start-instances'
'ec2 down' = 'ec2 stop-instances'
