[main]

# Use color output mode (default is to use simple substring match).
color_output = True

# Use fuzzy matching mode for resources (default is to use simple substring match).
fuzzy_match = True

# Use shortcut matching mode
shortcut_match = False

# log_file location.
log_file = ~/.saws.log

# Default log level. Possible values: "CRITICAL", "ERROR", "WARNING", "INFO"
# and "DEBUG".
log_level = INFO

# AWS resources to refresh
refresh_instance_ids = True
refresh_instance_tags = True
refresh_bucket_names = True

[shortcuts]

# Shortcuts are evaluated top to bottom, so place simpler shortcuts
# near the bottom and more complex shortcuts at the top.
# Once a shortcut key match is found, the corresponding value is
# substituted and matching stops until the next keypress.
# Shortcuts are only shown after the user types 'aws' as the first
# command and is inputting the subcommand:
#     'aws [show shortcut matches]'
'ec2 ls --ec2-tags' = 'ec2 describe-instances --filters "Name=tag-key,Values=%s"'
'ec2 ls --ec2-state' = 'ec2 describe-instances --filters "Name=instance-state-name,Values=%s"'
'ec2 ls --ec2-running' = 'ec2 describe-instances --filters "Name=instance-state-name, Values=running"'
'ec2 ls --ec2-pending' = 'ec2 describe-instances --filters "Name=instance-state-name, Values=pending"'
'ec2 ls --ec2-stopping' = 'ec2 describe-instances --filters "Name=instance-state-name, Values=stopping"'
'ec2 ls --ec2-shutting-down' = 'ec2 describe-instances --filters "Name=instance-state-name, Values=shutting-down"'
'ec2 ls --ec2-stopped' = 'ec2 describe-instances --filters "Name=instance-state-name, Values=stopped"'
'ec2 ls --ec2-terminated' = 'ec2 describe-instances --filters "Name=instance-state-name, Values=terminated"'
'ec2 up --instance-ids' = 'ec2 start-instances --instance-ids'
'ec2 down --instance-ids' = 'ec2 stop-instances --instance-ids'
'ec2 ls' = 'ec2 describe-instances'
'dynamodb ls' = 'dynamodb list-tables'
'emr ls' = 'emr list-clusters'
'elb ls' = 'elb describe-load-balancers'
